---
// Define the array of projects directly in the frontmatter script.
const otherprojects = [
  {
    url: "https://www.artstation.com/artwork/x3dPJm",
    title: "Code: Eye Gem",
    description:
      "Mi proyecto de final de grado en la especialización de Desarrollo de Videojuegos, una pequeña demo de un juego de acción 3D en tercera persona",
  },
  {
    url: "",
    title: "En construcción...",
    description:
      "Actualmente estoy desarrollando mi proyecto final para el grado de Desarrollo de Aplicaciones Web, pronto más información",
  },
   ,{
     "url": "",
     "title": "Diseño y posicionamiento web SEO",
     "description": "Como parte de mis prácticas de Desarrollo de Aplicaciones Web, he diseñado múltiples páginas web mediante Wordpress para varias empresas, etre ellas,  <a href='https://magoblan.es/' style='font-weight:bolder;'>Magoblan</a>, <a href='https://reformasymortero.com/' style='font-weight:bolder;'>Reformas y Morteros</a>, o <a href='https://exclusivasdadi.com' style='font-weight:bolder;'>Exclusivas Dadi</a>",
   }
];

// Function to calculate `data-aos-duration` based on index
function calculateAosDuration(index) {
  return 1500 + index * 500; // Example: Increment duration by 500ms for each project
}
---

<section class="bg-primary">
  <div class="px-8 2xl:max-w-7xl mx-auto py-32">
    <div class="space-y-2">
      <!-- Section Title and Decorative Elements -->
      <div
        class="h-0.5 bg-secondary"
        data-aos="fade-up"
        data-aos-duration="1000"
      >
      </div>
      <h3
        class="text-secondary text-base font-medium"
        data-aos="fade-up"
        data-aos-duration="1500"
      >
        <span>Mis</span>
        <span class="font-bold">proyectos</span>
      </h3>
    </div>

    <ul
      class="mx-auto grid grid-cols-1 sm:grid-cols-2 text-secondary lg:grid-cols-4 items-start gap-6 mt-32"
      role="list"
    >
      {
        otherprojects.map((project, index) => (
          <li
            class="flow-root h-full "
            data-aos="fade-up"
            data-aos-duration={calculateAosDuration(index)}
          >
            <a href={project.url}>
              <div class="h-full flex flex-col justify-between">
                <div>
                  <p class="group-hover:text-secondary/70 text-secondary text-9xl font-black lg:rotate-90 xl:-translate-x-32 lg:-translate-x-20 lg:mb-8 xl:mb-0  lg:pb-8">
                    0{index + 1}.
                  </p>
                  <p class="italic shrink-0">{project.title}</p>
                  <p class="text-3xl  mt-3 leading-8 indent-9">
                    {project.description}
                  </p>
                </div>
              </div>
            </a>
          </li>
        ))
      }
    </ul>
  </div>
</section>
